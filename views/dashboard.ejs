<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/dashboard.css">
  <title>Dashboard</title>
</head>
<body>
  <header>
    <h1>Dashboard</h1>
    <a href="/jobs/create" class="btn">Create Job</a> <!-- Button to create a job -->
  </header>
  <div class="container">
    <ul class="job-list">
      <% jobs.forEach(job => { %>
        <li>
          <h3><%= job.title %></h3>
          <p><%= job.website %></p>
          <p>Status: <%= job.status %></p>
          <a href="/jobs/<%= job._id %>">View Details</a>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
